<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FE7FF"
    android:id="@+id/rl_notification_layout">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_notification_album"
        android:src="@mipmap/background_default"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_name"
        android:text="白狐"
        android:layout_alignTop="@+id/iv_notification_album"

        android:layout_toEndOf="@+id/iv_notification_album" />
    <!--android:textColor="#000000"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_album"
        android:text="书生"
        android:layout_alignBottom="@+id/iv_notification_album"
        android:layout_toEndOf="@+id/iv_notification_album" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/tv_notification_album"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_notification_pre"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/play_btn_prev"
        android:layout_gravity="center_vertical"
         />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/iv_notification_playpause"
        android:src="@mipmap/play_rdi_btn_play"
        android:layout_gravity="center_vertical"
         />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/iv_notification_next"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/play_btn_next"
         />
    </LinearLayout>



</RelativeLayout>