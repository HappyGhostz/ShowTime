<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- RippleView -->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
        <attr name="rv_listMode" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="background_color" format="color"/>
    </declare-styleable>
    <!--PlayLoadIng-->
    <declare-styleable name="LoadingView">
        <attr name="outerCircleRadius" format="dimension|reference" />
        <attr name="outerCircleColor" format="color|reference" />
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <attr name="innerTriangleColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="TagGroup">
        <attr name="atg_isAppendMode" format="boolean" />
        <attr name="atg_inputHint" format="string" />

        <attr name="atg_borderColor" format="color" />
        <attr name="atg_textColor" format="color" />
        <attr name="atg_backgroundColor" format="color" />

        <attr name="atg_dashBorderColor" format="color" />
        <attr name="atg_inputHintColor" format="color" />
        <attr name="atg_inputTextColor" format="color" />

        <attr name="atg_checkedBorderColor" format="color" />
        <attr name="atg_checkedTextColor" format="color" />
        <attr name="atg_checkedMarkerColor" format="color" />
        <attr name="atg_checkedBackgroundColor" format="color" />
        <attr name="atg_pressedBackgroundColor" format="color" />
        <attr name="atg_borderStrokeWidth" format="dimension" />
        <attr name="atg_textSize" format="dimension" />
        <attr name="atg_horizontalSpacing" format="dimension" />
        <attr name="atg_verticalSpacing" format="dimension" />
        <attr name="atg_horizontalPadding" format="dimension" />
        <attr name="atg_verticalPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="tagGroupStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="XlHRatingBar">
        <attr name="starCount" format="integer" /><!--总的星星数-->
        <attr name="canEdit" format="boolean" /><!--是否可以点击选择，有时候纯展示用不需要选择-->
        <attr name="widthAndHeight" format="dimension" /><!--单个星星的宽度-->
        <attr name="dividerWidth" format="dimension" /><!--星星左右间距-->
        <attr name="countSelected" format="integer" /><!--当前已选中的星星个数-->
        <attr name="stateResId" format="reference" /><!--单个星星不同状态下对应的图标-->
        <attr name="differentSize" format="boolean" /><!--是否支持大小不等星星样式-->
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />

    </declare-styleable>



</resources>
